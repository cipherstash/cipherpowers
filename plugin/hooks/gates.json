{
  "gates": {
    "plan-compliance": {
      "description": "Verify work follows the active plan",
      "command": "${CLAUDE_PLUGIN_ROOT}/scripts/plan-compliance.sh",
      "on_pass": "CONTINUE",
      "on_fail": "BLOCK"
    }
  },
  "hooks": {
    "SubagentStop": {
      "enabled_agents": ["code-agent", "rust-agent", "commit-agent"],
      "gates": ["plan-compliance"]
    }
  }
}
