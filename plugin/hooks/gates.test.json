{
  "gates": {
    "always-pass": {
      "description": "Gate that always passes",
      "command": "echo 'Gate passed'",
      "on_pass": "CONTINUE",
      "on_fail": "BLOCK"
    },
    "always-fail": {
      "description": "Gate that always fails",
      "command": "exit 1",
      "on_pass": "CONTINUE",
      "on_fail": "BLOCK"
    },
    "warn-only": {
      "description": "Gate that fails but continues",
      "command": "exit 1",
      "on_pass": "CONTINUE",
      "on_fail": "CONTINUE"
    },
    "chain-test": {
      "description": "Gate that chains to another",
      "command": "echo 'Chaining'",
      "on_pass": "always-pass",
      "on_fail": "BLOCK"
    }
  },
  "hooks": {
    "PostToolUse": {
      "enabled_tools": ["Edit"],
      "gates": ["always-pass"]
    },
    "SubagentStop": {
      "enabled_agents": ["test-agent"],
      "gates": ["always-pass", "warn-only"]
    }
  }
}
